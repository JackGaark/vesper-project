<div class="container-sign-up-new">
  <!-- <div class="login-form-wrapper"> -->
  <div class="row">
<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <!-- <div class="form-inputs"> -->

      <input class="fancy-input" required="required" aria-required="true" type="email" value="" name="user[email]" placeholder="Email" id="user_email" autocomplete='email' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">

  <!-- </div> -->

  <div class="form-actions">

    <input type="submit" name="commit" value="Send me reset instructions" class="fancy-input" data-disable-with="Send me reset instructions">
  </div>
  <hr>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
