<!-- add squad member -->
<div class="squad-card-image mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand"></div>
  <div class="mdl-card__actions">
    <%= form_tag("/squad/#{@squad.id}", method: :put, remote: true) do %>
      <%= text_field_tag(:email) %>
      <%= submit_tag("add squad member by email", class: "btn btn-primary", id: "squad-add-btn") %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  document.getElementById('squad-add-btn').addEventListener("click", addSquadMember);

  function addSquadMember(e) {
  e.preventDefault();
  const squadRow = document.querySelector('.squad-cards');
  squadRow.insertAdjacentHTML('beforeend',"<%= j render 'squad-member-card' %>");
  }
</script>
