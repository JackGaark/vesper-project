<div class="squadmember-list-container mdl-shadow--2dp" data-friend-name="<%= user.first_name %><%= user.last_name %>" data-recent-user-id="<%= user.id %>">


          <% if user.photo.nil? %>
            <img src="https://avatars3.githubusercontent.com/u/5466297?v=4">
          <% else %>
            <img class="avatar-large" data-user-id="<%= user.id %>" src="<%= cl_image_path user.photo, width: 100, height: 100, crop: 'thumb', gravity: 'face' %>">
          <% end %>


  <!-- <div class="message-name"> -->
    <!-- <h3>Gab Dehan</h3> -->
    <!-- <p>10/07/17</p> -->
  <!-- </div> -->
  <div class="squadmember-recent-list-name">
    <p><%= "#{user.first_name} #{user.last_name}" %></p>
    <!--     <p>
      I am not sure yet! I might be in Shanghai at this moment... Can I tell you later?
    </p> -->
  </div>
  <div class="sidekick-recent-list-last-row">
    <% if options == 'add' %>
      <%= link_to create_squadmember_path(@squad.id,user.id), { method: :post, remote: true } do %>
          <div id="add-button">
            <i class="material-icons"> add </i>
          </div>
        <!-- </button> -->
      <% end %>
    <% elsif options == 'question' %>

          <i class="material-icons" member-closed="<%= user.id %>">lock</i>
          <i class="material-icons" style="display: none;" member-open="<%= user.id %>">lock_open</i>
          <span data-contribution-user-id="<%= user.id %>" style="display: none;"><sup>$<sup></span>

    <% elsif options == 'squad-show' %>
          <i class="far fa-thumbs-up"></i>

    <% end %>
  </div>
</div>
