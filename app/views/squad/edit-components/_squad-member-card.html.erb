<% @squad.squadmembers.each do |s| %>
  <% s_member = User.find(s.user_id) %>




  <div class="col-xs-12 col-sm-6">
    <div class="squad-member">

      <div class="member-avatar">
          <% avatar_url = current_user.facebook_picture_url || cl_image_path( current_user.photo, { width: 100, height: 100, crop: 'thumb', gravity: 'face' }) || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>

      </div>

      <div class="squad-member-info">
        <h3 class="title"><%= s_member.first_name %></h3>
        <% if @squad.user == s.user %>
          <span class="squad-rank">LEADER</span>
        <% else %>
          <span class="squad-rank">SideKick</span>
        <% end %>
      </div>

      <ul class="social-links">
        <li><a href="#" class="fas fa-comment-alt"></a></li>
        <li><a href="#" class="fab fa-facebook-messenger"></a></li>

      </ul>

    </div>
  </div>




























<% end %>




